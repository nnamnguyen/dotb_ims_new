{{#each value}}
    <div class="control-group email" data-emailaddress="{{email_address}}">
        <div class="input-append">
            <input type="text" class="existingAddress" data-id="{{email_address}}" value="{{email_address}}" disabled>
        </div>
        <div class="btn-toolbar prevent-mousedown">
            <div class="btn-group" data-parentEmail="{{email_address}}">
                <button type="button" class="{{#if primary_address}}active {{/if}}is_primary btn" disabled><i class="fa fa-star"></i></button>
                <button type="button" class="{{#if opt_out}}active {{/if}}btn" disabled><i class="fa fa-ban"></i></button>
                <button type="button" class="{{#if invalid_email}}active {{/if}}btn" disabled><i class="fa fa-exclamation-circle"></i></button>
            </div>
        </div>
    </div>
{{/each}}
