
{{#orEquals def.event "list:editrow:fire" def.event "list:deleterow:fire"}}

    {{#if ../hiddenEdit}}
      <!-- QuickEdit: Off -->

    {{else}}

       <!-- QuickEdit: On -->
        <a href="{{#if fullRoute}}#{{fullRoute}}{{else}}{{#if def.route}}#{{buildRoute context=context model=model
                                                                                       action=def.route.action}}{{else}}javascript:void(0);{{/if}}{{/if}}"
           class="rowaction{{#if def.button}} btn{{/if}}{{#if def.primary}} btn-primary{{/if}} "
            {{#if def.event}}
           data-event="{{def.event}}"
            {{/if}}
            {{#if def.tooltip}}
           rel="tooltip"
           data-placement="bottom"
           title="{{str def.tooltip module}}"
            {{/if}}
            {{#if ariaLabel}}aria-label="{{ariaLabel}}"{{/if}}
           role="button" tabindex="{{tabIndex}}" name="{{name}}"
           track="click:{{#if name}}{{name}}{{else}}{{label}}{{/if}}">
            {{#if def.tooltip}}
                {{#if def.icon}}
                    <i class="far {{def.icon}}"></i>
                {{/if}}
            {{/if}}
            {{#unless def.dismiss_label}}
                {{str label}}
            {{/unless}}
        </a>
    {{/if}}
{{/orEquals}}

{{#andNotEquals def.event "list:editrow:fire" def.event "list:deleterow:fire"}}

    <a href="{{#if fullRoute}}#{{fullRoute}}{{else}}{{#if def.route}}#{{buildRoute context=context model=model
                                                                                   action=def.route.action}}{{else}}javascript:void(0);{{/if}}{{/if}}"
       class="rowaction{{#if def.button}} btn{{/if}}{{#if def.primary}} btn-primary{{/if}} "
        {{#if def.event}}
       data-event="{{def.event}}"
        {{/if}}
