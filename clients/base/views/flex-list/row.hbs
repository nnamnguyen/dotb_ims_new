<tr name="{{module}}_{{model.id}}" class="single">
    {{#each view.leftColumns}}
        <td data-column="{{name}}">
            {{field ../view model=../model template=../view.viewName}}
        </td>
    {{/each}}
    {{#each view._fields.visible}}
        <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}" data-column="{{name}}">
            {{field ../view model=../model template=../view.viewName}}
        </td>
    {{/each}}
    {{#each view.rightColumns}}
        <td data-column="{{name}}">
            {{field ../view model=../model template=../view.viewName}}
        </td>
    {{/each}}
</tr>
