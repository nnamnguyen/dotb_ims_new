<div class="a11y-wrapper" data-a11y="toggle" role="button" tabindex="0" aria-label="{{str 'LBL_ARIA_TOGGLE_SUBPANEL_VISIBILITY' module}}" aria-expanded="{{#if context.attributes.collapsed}}false{{else}}true{{/if}}">
    <h4 class="pull-left">{{str layout.label parentModule}}</h4>
    {{#each meta.fields}}
    <span class="pull-left panel-field">
        {{field ../this model=../model}}
    </span>
    {{/each}}
</div>
<div class="subpanel-controls btn-toolbar pull-right">
    {{#each meta.buttons}}
        {{field ../this}}
    {{/each}}
</div>
