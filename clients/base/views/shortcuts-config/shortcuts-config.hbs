{{!

}}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4">
            {{{str 'LBL_SHORTCUT_KEYS_CONFIG_HELP'}}}
        </div>
        <div class="span4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th colspan="2">{{str 'LBL_CONTEXTUAL_SHORTCUTS'}}</th>
                    </tr>
                    <tr>
                        <th>{{str 'LBL_SHORTCUT_KEY_KEY'}}</th>
                        <th>{{str 'LBL_SHORTCUT_FUNCTION'}}</th>
                    </tr>
                </thead>
                <tbody data-render="contextual">
                    {{#each shortcuts}}
                        <tr data-id="{{this.id}}">
                            <td><input type="text" class="input-small" value="{{this.keys}}"/></td>
                            <td>{{str this.description}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="span4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th colspan="2">{{str 'LBL_GLOBAL_SHORTCUTS'}}</th>
                    </tr>
                    <tr>
                        <th>{{str 'LBL_SHORTCUT_KEY_KEY'}}</th>
                        <th>{{str 'LBL_SHORTCUT_FUNCTION'}}</th>
                    </tr>
                </thead>
                <tbody data-render="global">
                    {{#each global}}
                        <tr>
                            <td>{{this.keys}}</td>
                            <td>{{str this.description}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
