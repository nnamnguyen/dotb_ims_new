<div class="row-fluid helplet-container">
    <div class="helplet">
        <div data-helplet="content" class="helplet-content">
            {{#if meta.resources}}
                <ul class="resource-list">
                    {{#each meta.resources}}
                        <li class="resource {{css_class}}">
                            {{#if id}}
                            <a class="btn btn-link btn-invisible" href="javascript:void(0);" data-action="{{id}}">
                            {{else}}
                            <a class="btn btn-link btn-invisible" href="https://dotb.vn/ho-tro" target="_blank">
                            {{/if}}
                                <span class="label label-module label-module-sm pull-left {{color}}">
                                    <i class="fa fa-2x {{icon}}"></i>
                                </span>
                                <div class="resource-info">
                                    {{str link module}}
                                </div>
                            </a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <div class="helplet-body">
                    <p>{{{helpObject.more_help}}}</p>
                    {{#if helpObject.body}}
                        <p class="body-text">{{nl2br helpObject.body}}</p>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
</div>
