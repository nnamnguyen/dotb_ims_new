<div class="record">
    {{#each view.meta.panels}}
        {{#unless header}}
            {{#each grid}}
            <div class="row-fluid panel_body {{../name}}">
                {{#each this}}
                <div class="span{{span}} record-cell{{#if cell_css_class}} {{cell_css_class}}{{/if}}"
                     data-type="{{type}}" data-name="{{name}}">
                <div class="row-fluid">
                    {{#eq span 6}}
                        {{#if ../../../labels}}
                            {{#unless dismiss_label}}
                                {{#if label}}
                                    <div class="span4">
                                        <div class="record-label" style="padding-top:7px;text-align: right"
                                             data-name="{{name}}">
                                            {{str label ../../../../../../../../view.module}}
                                        </div>
                                    </div>
                                <div class="span8">
                                {{else}}
                                <div class="span12">
                                {{/if}}
                            {{else}}
                            <div class="span12">

                            {{/unless}}
                        {{/if}}
                    {{else}}
                        {{#eq span 4}}
                            {{#if ../../../../labels}}
                                {{#unless ../dismiss_label}}
                                    {{#if ../label}}
                                        <div class="span4">
                                            <div class="record-label" style="padding-top:7px;text-align: right"
                                                 data-name="{{../name}}">
                                                {{str label ../../../../../../../../../view.module}}
                                            </div>
                                        </div>
                                    <div class="span8">
                                    {{else}}
                                    <div class="span12">
                                    {{/if}}
                                {{else}}
                                <div class="span12">
                                {{/unless}}
                            {{/if}}
                        {{else }}

                            {{#if ../../../../labels}}
                                {{#unless ../dismiss_label}}
                                    {{#if ../label}}
                                        <div class="span2">
                                            <div class="record-label" style="padding-top:7px;text-align: right"
                                                 data-name="{{../name}}">
                                                {{str label ../../../../../../../../../view.module}}
                                            </div>
                                        </div>
                                    <div class="span10">
                                    {{else}}
                                    <div class="span12">
                                    {{/if}}
                                {{else}}
                                <div class="span12">
                                {{/unless}}
                            {{/if}}

                        {{/eq}}
                    {{/eq}}

                    {{#if name}}
                        <span class="normal{{#if css}} {{css}}{{/if}} index{{index}}"
                              data-fieldname="{{name}}"
                              data-index="{{index}}">
                            {{field ../../../../../view model=../../../../../view.model
                                    template=../../../../../view.action}}
                        </span>
                    {{/if}}
                </div>
                </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        {{/unless}}
    {{/each}}
</div>
    <div class="row-fluid{{#unless view.hiddenPanelExists}} hide{{/unless}} show-hide-toggle">
        <div class="record-cell">
            <button class="btn btn-link btn-invisible more{{#if view.hideMoreButton}} hide{{/if}}"
                    data-moreless="more"
                    data-target=".panel_hidden">{{str "LBL_SHOW_MORE"}}...
            </button>
            <button class="btn btn-link btn-invisible less{{#if view.hideLessButton}} hide{{/if}}"
                    data-moreless="less"
                    data-target=".panel_hidden">{{str "LBL_SHOW_LESS"}}</button>
        </div>
    </div>
