<div class="welcome">
    <div class="thumbnail login">
        <div class="tcenter">
            <h2 class="brand"><img src="{{logoUrl}}" alt="DotBCRM"></h2>
        </div>
        <form name='{{name}}' class="tcenter">
            {{#each meta.panels}}
                {{#each fields}}
                    <div class="control-group">{{field ../../this model=../../model}}</div>
                {{/each}}
                <p class="help-block">
                    <strong>{{str "LNK_PORTAL_LOGIN_FORGOTPASSWORD"}}</strong>
                <br />
                    {{str "LBL_PORTAL_LOGIN_FORGOTPASSWORD"}}
                </p>
            {{/each}}
            <div class="login-footer">
                {{#each meta.buttons}}
                {{field ../this model=../model}}
                {{/each}}
            </div>
        </form>
    </div>
</div>
