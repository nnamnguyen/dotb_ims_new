<div class="filter-box">
    {{#each tabs}}
        <button class="btn rtSbStageButton {{#eq ../value moduleField}}selected{{/eq}}" data-pipeline="{{moduleField}}" name="rtSbBtn">
            {{tabLabel}}
        </button>
    {{/each}}
