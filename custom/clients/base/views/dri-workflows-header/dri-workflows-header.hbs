<div class="record-panel row dri-workflows-header" style="margin: 0; height: 40px;">
    <div class="record-panel-header" style="box-shadow: none; -webkit-box-shadow: none; -moz-box-shadow: none;">
        <div class="row-fluid panel-inactive{{#eq context.attributes.moreLess "more"}} hide{{/eq}}"
             data-moreless="more"
             data-target=".customer-parent-create">
            <h4 class="pull-left">
                <span style="font-weight: bold; text-transform: uppercase;">
                    {{str "LBL_MODULE_NAME" "DRI_Workflows"}}
                </span>
                {{#if collection.dataFetched}}
                    <span>({{collection.length}})</span>
                {{/if}}
            </h4>
        </div>
        <div class="row-fluid panel-active{{#eq context.attributes.moreLess "less"}} hide{{/eq}}"
             data-moreless="less"
             data-target=".customer-parent-create">
            <h4 class="pull-left">
                <span style="font-weight: bold; text-transform: uppercase;">
                    {{str "LBL_MODULE_NAME" "DRI_Workflows"}}
                </span>
                {{#if collection.dataFetched}}
                    <span>({{collection.length}})</span>
                {{/if}}
            </h4>
        </div>
    </div>
</div>

{{#eq context.attributes.moreLess "more"}}
    {{#if access}}
        <div class="dri-workflows-actions clearfix">
            <div class="pull-right dri-workflows-actions-buttons">
                {{#each meta.buttons}}
                    {{field ../../this model=../../editModel}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-fields">
                {{#each meta.fields}}
                    {{field ../../this model=../../editModel template="edit"}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-spinner hide">
                <i class="fa fa-spinner fa-spin fa-2x icon-spinner icon-spin icon-2x"></i>
            </div>
        </div>
    {{/if}}

    {{#unless collection.length}}
        <div class="block-footer" style="border-top: 0; padding-bottom: 15px;">
            {{#if collection.dataFetched}}
                {{str "LBL_NO_DATA_AVAILABLE" this.module}}
            {{else}}
                <div class="loading">
                    <span>{{str "LBL_ALERT_TITLE_LOADING"}}</span>
                    <i class="l1">&#46;</i><i class="l2">&#46;</i><i class="l3">&#46;</i>
                </div>
            {{/if}}
        </div>
    {{/unless}}
{{/eq}}
