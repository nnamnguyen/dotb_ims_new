<div data-content="chart">
    <ul id="tab" class="nav nav-tabs">
        <li class="active" style="width:33%;text-align:center;"><a class="ellipsis_inline opportunity-metric-description" data-original-title="Total" data-survey-published-unpublished-status="Total" href="#tab-chart" data-toggle="tab">Total<br><span class="label label-important count sc-fill00">{{total}}</span></a></li>
        {{#each tabData}}
            <li style="width:33%;text-align:center;">
                <a class="ellipsis_inline" data-original-title="{{statusLabel}}" data-survey-published-unpublished-status="{{status}}" href="#tab-{{index}}" data-toggle="tab">{{statusLabel}}<br>
                    <span class="label count" style="background-color:{{cssStyle}};border:1px solid {{cssStyle}};">{{models}}</span>
                </a>
            </li>
        {{/each}}
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active" id="tab-chart">
    <div class="survey-published-unpublished-status-chart sc-chart" style="height: 275px;margin-bottom: 14px;">
        <svg class="sucrose" id="{{cid}}"></svg>
    </div>
        </div>
    {{#each tabData}}
            <div class="tab-pane fade" id="tab-{{index}}">
                <ul class="listed">
                {{#each name}}
                    <li>
                        <span data-model-id="id"></span>&nbsp;<a href="#bc_survey/{{this.id}}">{{this.name}}</a>
                    </li>
                {{/each}}
                </ul>
        </div>
    {{/each}}
</div>
</div>
<div class="block-footer hide" data-content="nodata">{{str "LBL_NO_DATA_AVAILABLE"}}</div>
