<div class="headerpane">
    <h1>
        <div class="record-cell">
            <span class="module-title">{{str "LBL_TRANSLATE_LANGUAGES"}}</span>
        </div>
        <div class="btn-toolbar pull-right dropdown " style="padding: 3px 6px;">
            {{#each meta.buttons}}
                {{field ../this}}
            {{/each}}
        </div>
    </h1>
</div>
<div class="record tab-layout">
    <div class="row-fluid record-panel" data-panelname="panel_body">
        <div class="row-fluid record-panel-content ">
            <div class="row-fluid panel_body">
                <div class="span12">
                    {{str "LBL_DES_TRANSLATE_LANGUAGES" this.module}}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label>Module:</label>
                        <select style="margin-top: 7px" id="module_selected">
                            {{#each this.data}}
                                <option value="{{@key}}" {{#eq ../this.module_selected.module @key}}selected{{/eq}}>{{@key}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="span6">
                    <div class="control-group span6">
                        <label>Type translate:</label>
                        <select style="margin-top: 7px" id="type_translate">
                            <option value="en_vn" {{#eq this.type_translate 'en_vn'}}selected{{/eq}}>EN-&gt;VN</option>
                            <option value="vn_en" {{#eq this.type_translate 'vn_en'}}selected{{/eq}}>VN-&gt;EN</option>
                        </select>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                <tr>
                    <th width="20%">{{str "LBL_LABLE" this.module}}</th>
                    {{#eq this.type_translate 'en_vn'}}
                        <th width="40%">{{str "LBL_ENGLISH" this.module}}</th>
                        <th width="40%">{{str "LBL_VIETNAMESE" this.module}}</th>
                    {{/eq}}
                    {{#eq this.type_translate 'vn_en'}}
                        <th width="40%">{{str "LBL_VIETNAMESE" this.module}}</th>
                        <th width="40%">{{str "LBL_ENGLISH" this.module}}</th>
                    {{/eq}}
                </tr>
                </thead>
                <tbody>
                {{#eq this.type_translate 'en_vn'}}
                    {{#each ../this.module_selected.mod_strings.en_us}}
                        <tr>
                            <td>{{@key}}</td>
                            <td>{{this}}</td>
                            <td>
                                <textarea rows="4" style="width:97%" data-module="{{../this.module_selected.module}}" data-lang="vn_vn" data-langkey="{{@key}}" class="lang-value">{{getValueOf ../../this.module_selected.mod_strings.vn_vn @key}}</textarea>
                            </td>
                        </tr>
                    {{/each}}
                {{/eq}}
                {{#eq this.type_translate 'vn_en'}}
                    {{#each ../this.module_selected.mod_strings.vn_vn}}
                        <tr>
                            <td>{{@key}}</td>
                            <td>{{this}}</td>
                            <td>
                                <textarea rows="4" style="width:97%" data-module="{{../this.module_selected.module}}" data-lang="vn_vn" data-langkey="{{@key}}" class="lang-value">{{getValueOf ../../this.module_selected.mod_strings.en_us @key}}</textarea>
                            </td>
                        </tr>
                    {{/each}}
                {{/eq}}
                </tbody>
            </table>
        </div>
    </div>
</div>