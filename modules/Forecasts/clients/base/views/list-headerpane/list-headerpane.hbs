<div class="headerpane">
    <h1>
        <div class="record-cell">
            <span class="module-title pull-left">{{title}}</span>
            {{#if meta.tree}}
                {{#each meta.tree}}
                    {{field ../this}}
                {{/each}}
            {{/if}}
        </div>
        <div class="btn-toolbar pull-right dropdown">
            {{#each meta.buttons}}
                {{field ../this}}
            {{/each}}
        </div>
    </h1>
</div>
